             BackgroundColor="WhiteSmoke">

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">
            <Border 
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="0"
                    BackgroundColor="LimeGreen"
                    VerticalOptions="Start" 
                    Padding="14">
                <Grid ColumnDefinitions="*, 150"
                      RowDefinitions="*, Auto">
                    <VerticalStackLayout Grid.Row="0"
                                         Grid.Column="0"
                                         Spacing="10">
                        <Label Text="MIT.com"
                               FontSize="25"
                               FontAttributes="Bold"
                               FontFamily="Robot"
                               TextColor="Black"
                               VerticalOptions="Center"/>
                        <Label Text="Your bright future start here!"
                               TextColor="Black"/>

                    </VerticalStackLayout>
                    <Button 
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Get Started"
                            FontSize="Default"
                            TextColor="Black"
                            BackgroundColor="White"                    
                            FontAttributes="Bold"
                            CornerRadius="5"
                            HorizontalOptions="Center"
                            Padding="15, 0"/>
                    <Image Grid.RowSpan="2"
                           Grid.Column="1"
                           Source="mitremove.png"
                           HeightRequest="130"
                           WidthRequest="130"/>
                </Grid>
            </Border>

