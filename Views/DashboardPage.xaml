                                <Label Text="Mahardika Institute of Technology"
                                       TextColor="Black"
                                       FontSize="Default"
                                       Margin="1"/>
                            </VerticalStackLayout>
                            <Button Text="Read"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    TextColor="White"
                                    FontSize="13"
                                    BackgroundColor="Black"
                                    FontAttributes="Bold"
                                    CornerRadius="6"
                                    HorizontalOptions="Center"
                                    Padding="20, 5"
                                    Command="{Binding NavigateToSchoolProfileCommand}"/>
                            <Image Grid.RowSpan="2"
                                   Grid.Column="1"
                                   Source="university.png"
                                   HeightRequest="90"
                                   WidthRequest="90"/>
                        </Grid>
                    </Border>

