                    <!--SCHOOL PROFILE-->
                    <Border
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0"
                        BackgroundColor="CadetBlue"
                        VerticalOptions="Start"
                        Padding="10">
                        <Grid ColumnDefinitions="*, 150"
                              RowDefinitions="*, Auto">
                            <VerticalStackLayout
                                Grid.Row="0"
                                Grid.Column="0"
                                Spacing="10">
                                <Border WidthRequest="155"
                                        HeightRequest="32"
                                        BackgroundColor="Cornsilk"
                                        StrokeShape="RoundRectangle 10"
                                        Stroke="gray"
                                        StrokeThickness="2"
                                        VerticalOptions="Start"
                                        HorizontalOptions="Start">
                                    <Label Text="School Profile"
                                           FontSize="20"
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           FontFamily="Robot"
                                           HorizontalOptions="Center"/>
